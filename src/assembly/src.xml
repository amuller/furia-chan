<assembly>
  <id>src</id>
  <formats>
    <format>tar.gz</format>
    <format>tar.bz2</format>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>.</directory>
      <outputDirectory></outputDirectory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>**/target/**</exclude>
        <exclude>.*</exclude>
				<exclude>poster.txt</exclude>
				<exclude>deploy.pl</exclude>
				<exclude>announce.txt</exclude>
				<exclude>**/nbproject/**</exclude>
				<exclude>**/.settings/**</exclude>
				<exclude>**/svn_config/**</exclude>
      </excludes>
    </fileSet>
  </fileSets>

	<files>
    <file>
      <source>README.txt</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>LICENSE.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>
  </files>
</assembly>